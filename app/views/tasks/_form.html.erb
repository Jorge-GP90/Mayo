<div class="error_unit">
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="row mt-4 mb-4">
  <div class="col-xs-12 col-md-6">
    <%= form_with(model: task, local: true) do |form| %>
      <div class="form-group field">
        <%= form.label :task_name %>
        <%= form.text_field :task_name, class: "form-control"  %>
      </div>

      <div class="form-group field">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control"  %>
      </div>

      <div class="form-group field">
        <%= form.label :priority %>
        <%= form.select :priority, Priority.options_for_priority, {prompt: false}, class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= form.label :status %>
        <%= form.select :status, Status.options_for_status, {prompt: false}, class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= form.label :expired_at %>
        <%= form.datetime_select :expired_at, class: "form-control"  %>
      </div>
      
      <div class="form-check task_unit_check">
        <%= form.collection_check_boxes(:label_ids, Label.all, :id, :label_name) do |cb| %>
        <div class="form-check-label">
          <%= cb.label { cb.check_box + cb.text } %>
        </div>
        <% end %>
      </div>

      <div class="form-group ">
        <%= form.submit "Register", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>