<div class="error_unit">
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="row mt-4 mb-4">
  <div class="col-xs-12 col-md-6">
    <%= form_with(model: task, local: true) do |form| %>
      <div class="form-group field">
        <%= form.label :task_name %>
        <%= form.text_field :task_name %>
      </div>

      <div class="form-group field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="form-group field">
        <%= form.label :priority %>
        <%= form.select :priority, Priority.options_for_priority, {prompt: false} %>
      </div>

      <div class="form-group field">
        <%= form.label :status %>
        <%= form.select :status, Status.options_for_status, {prompt: false} %>
      </div>

      <div class="form-group field">
        <%= form.label :expired_at %>
        <%= form.datetime_select :expired_at %>
      </div>

      <div class="form-group ">
        <%= form.submit "Register", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>