<h1>Tasks</h1>

<%= link_to "Sort by expired_at", tasks_path(sort_expired_at: "true") %>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Expired_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class= "task_row" ><%= task.task_name %></td>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= l task.expired_at, format: :long %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
