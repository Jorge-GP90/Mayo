<h1>Tasks</h1>

<%= link_to "Sort by expired_at", tasks_path(sort_expired: "true") %>
<br>
<%= form_with scope: :task, url: tasks_path, method: :get, local: true do |f| %>
   <%= f.label :task_name %>
   <%= f.text_field :task_name %>
   <%= f.label :status %>
   <%= f.select :status, Status.options_for_status, include_blank: true %>
   <%= f.submit :search %>
 <% end %>
<hr>
<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Expired_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class= "task_row" ><%= task.task_name %></td>
        <td><%= task.description %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td class="expired_row"><%= l(task.expired_at, format: :long) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
