<div class="col-md-1">
</div>
<div class="col-xs-12 col-md-11">
  <div class="">
    <h1 class="mb-3">User Managment List</h1>
  </div>
  <div class="btn btn-primary new-btn  btn-sm mb-4">
    <%= link_to 'New user', new_admin_user_path %>
  </div>
  <table class="table">
    <thead>
      <th class= "text-justify"> Name </th>
      <th class= "text-justify"> Email </th>
      <th class= "text-justify"> Privilage Admin </th>
      <th class= "text-justify"><%= "" %></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr class="user_management">
        <td class= "text-justify"><%= user.user_name %></td>
        <td class= "text-justify"><%= user.email %></td>
        <td class= "text-justify"><%= user.admin? ? 'Admin' : 'none' %></td>
        <td class= "text-justify">
          <%= link_to "Show", admin_user_path(user.id),  class: "btn btn-outline-primary show-btn" %>
          <%= link_to "Edit", edit_admin_user_path(user.id), class: "btn btn-outline-success edit-btn" %>
          <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "User「#{user.user_name}」will be delete, Are you sure?'"}, id: "delete_button", class: "btn btn-outline-danger delete-btn" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>